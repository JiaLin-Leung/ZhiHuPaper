<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.example.zhihupaper.widget.RoundImageView
        android:id="@+id/roundImageView2"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        tools:text="HazelQ_"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/roundImageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="19dp"
        app:layout_constraintEnd_toStartOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thumb_in_comment" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="21" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/roundImageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="特别不喜欢这个男性律师一上来就忙着指责受害者的论调，既然你也说你不清楚事实的真相，那就直接从你专业的角度讲好了，干嘛扯什么精神有问题之类的，" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="76dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toEndOf="@+id/roundImageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:text="01-12 07:35" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="167dp"
        android:background="@color/colorGray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>